@article{2020IngrossoAStatistical,
  title = {A {{Statistical Investigation}} of {{Mesoscale Precursors}} of {{Significant Tornadoes}}: {{The Italian Case Study}}},
  shorttitle = {A {{Statistical Investigation}} of {{Mesoscale Precursors}} of {{Significant Tornadoes}}},
  author = {Ingrosso, Roberto and Lionello, Piero and Miglietta, Mario Marcello and Salvadori, Gianfausto},
  date = {2020-03},
  journaltitle = {Atmosphere},
  volume = {11},
