@article{2015TurcoObservedClimate,
  title = {Observed Climate Change Hotspots},
  author = {Turco, M. and Palazzi, E. and family=Hardenberg, given=J., prefix=von, useprefix=true and Provenzale, A.},
  date = {2015},
  journaltitle = {Geophysical Research Letters},
