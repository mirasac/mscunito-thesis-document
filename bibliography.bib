@article{2020ZscheischlerATypology,
  title = {A Typology of Compound Weather and Climate Events},
  author = {Zscheischler, Jakob and Martius, Olivia and Westra, Seth and Bevacqua, Emanuele and Raymond, Colin and Horton, Radley M. and family=Hurk, given=Bart, prefix=van den, useprefix=true and AghaKouchak, Amir and Jézéquel, Aglaé and Mahecha, Miguel D. and Maraun, Douglas and Ramos, Alexandre M. and Ridder, Nina N. and Thiery, Wim and Vignotto, Edoardo},
