@article{2014FaghmousABig,
  title = {A {{Big Data Guide}} to {{Understanding Climate Change}}: {{The Case}} for {{Theory-Guided Data Science}}},
  shorttitle = {A {{Big Data Guide}} to {{Understanding Climate Change}}},
  author = {Faghmous, James H. and Kumar, Vipin},
  date = {2014-09},
  journaltitle = {Big Data},
