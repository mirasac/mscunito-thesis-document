  author = {De Vivo, Carmela and Ellena, Marta and Capozzi, Vincenzo and Budillon, Giorgio and Mercogliano, Paola},
  date = {2022-03-01},
  journaltitle = {Natural Hazards},
  shortjournal = {Nat Hazards},
